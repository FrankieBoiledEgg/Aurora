    <!--Monster Loot-->
	<element name="Goblin Ear" type="Item" source="Companions of Sildar" id="ID_FBE_COS_ITEM_GOBLIN-EAR">
		<description>
			<p>The ear of a slain goblin, often can be sold for a reasonable price in frontier settlements.</p>
		</description>
		<setters>
			<set name="category">Monster Loot</set>
			<set name="cost" currency="sp">5</set>
			<set name="weight" lb="0.25">0.25 lb.</set>
			<set name="stackable">true</set>
		</setters>
	</element>
    <!--Pelts-->
    <element name="Pelt (Wolf)" type="Item" source="Companions of Sildar" id="ID_FBE_COS_ITEM_WOLF-PELT">
        <description>
            <p>The pelt of a slain wolf, can be sold for a reasonable price at almost all settlements.</p>
        </description>
        <setters>
            <set name="category">Trade Items</set>
            <set name="cost" currency="gp">1 lb</set>
            <set name="weight" lb="2">2</set>
            <set name="stackable">true</set>
        </setters>
    </element>
    <element name="Pelt (Beaver)" type="Item" source="Companions of Sildar" id="ID_FBE_COS_ITEM_BEAVER-PELT">
        <description>
            <p>The pelt of a slain beaver, can be sold for a reasonable price at almost all settlements.</p>
        </description>
        <setters>
            <set name="category">Trade Items</set>
            <set name="cost" currency="sp">1</set>
            <set name="weight" lb="1">1 lb</set>
            <set name="stackable">true</set>
        </setters>
    </element>
    <!--Vials-->
    <element name="Vial (Mercury)" type="Item" source="Companions of Sildar" id="ID_FBE_COS_ITEM_MERCURY-VIAL">
        <description>
            <p>A small vial of mercury, can be used in alchemial concoctions, sold or used as a poison.</p>
        </description>
        <setters>
            <set name="category">Miscellaneous Items</set>
            <set name="cost" currency="gp">1</set>
            <set name="weight" lb="0.1">0.1 lb</set>
            <set name="stackable">true</set>
        </setters>
    </element>
